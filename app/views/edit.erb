<div class="container">
  <h1>Craigslist Jr.</h1>

  <h2>Edit post</h2>
  <form action="/save_post" method="post">
    Title: <input type="text" name="title" required value=<%= @post.title %>>
    <br>
    Description: <textarea name="description"><%= @post.description %></textarea>
    <br>
    Email: <input type="text" name="email" value=<%= @post.email %> required>
    <br>
    Price: <input type="number" name="price" value=<%= @post.price %>>
    <br>
    <input type="submit" value="Enter">
  </form>


</div>